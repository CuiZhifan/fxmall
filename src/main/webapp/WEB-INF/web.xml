  <listener>
    <listener-class>com.qianfeng.fxmall.commons.Listener.TomCatListener</listener-class>
  </listener>
  
  <servlet>
    <servlet-name>goodsServlet</servlet-name>
    <servlet-class>com.qianfeng.fxmall.goods.controller.GoodsServlet</servlet-class>
